[module/player-mpris-tail]
type = custom/script
exec = ~/Scripts/player-mpris-tail.py -f '{icon} {artist} - {title}'
tail = true
label = Ôùô  %output% Ôùô
click-left = ~/Scripts/player-mpris-tail.py play-pause
click-right = ~/Scripts/player-mpris-tail.py next
click-middle = ~/Scripts/player-mpris-tail.py stop

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

; Available tags:
;   <label-song> (default)
;   <label-time>
;   <bar-progress>
;   <toggle> - gets replaced with <icon-(pause|play)>
;   <toggle-stop> - gets replaced with <icon-(stop|play)>
;   <icon-random>
;   <icon-repeat>
;   <icon-repeatone>
;   <icon-prev>
;   <icon-stop>
;   <icon-play>
;   <icon-pause>
;   <icon-next>
;   <icon-seekb>
;   <icon-seekf>
format-online = ÔÄÅ   <label-song>

; Available tokens:
;   %artist%
;   %album%
;   %date%
;   %title%
; Default: %artist% - %title%
label-song = %title%
format-online-padding = 3
