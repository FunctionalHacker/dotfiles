[commit]
	signoff = true
	gpgsign = true

[tag]
	gpgSign = true
	signoff = true

[format]
	signoff = true

[merge]
	prompt = false
	tool = nvim-merge

[mergetool "nvim-merge"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff]
	prompt = false
	tool = nvim-diff

[difftool "nvim-diff"]
	cmd = nvim -d -R

[pull]
	rebase = merges

[alias]
	mergetest = !git switch test && git pull && git merge --no-ff -m \"Merge $1 features to test\" $1 && git push

[color]
	pager = no
